@model SistemaVentas.Models.Producto

@{ ViewData["Title"] = "Editar"; }



<h3>Editar Producto</h3>
<div>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Editar" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre del Producto" value="@Model.Nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Descripcion del Producto" value="@Model.Descripcion" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Precio" class="control-label"></label>
                    <input asp-for="Precio" class="form-control" placeholder="Precio del Producto" value="@Model.Precio" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AvatarImage" class="control-label">Nueva Imagen:</label>
                    <br>
                    <label class="btn btn-secondary w-auto">

                        <input asp-for="AvatarImage " name="upload" style="display:inline;" type="file" />
                    </label>


                    <span asp-validation-for="AvatarImage" class="text-danger"></span>
                </div>


                <div class="form-group">


                    <a asp-action="Index2" class="btn btn-outline-info">Volver</a>   |
                    <input type="submit" value="Actualizar" class="btn btn-info" />

                </div>
            </form>
        </div>
    </div>

</div>
